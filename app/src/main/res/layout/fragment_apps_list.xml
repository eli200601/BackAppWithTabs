<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_view"
        android:layout_weight="1"
        android:background="@color/colorGray">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/bottom_bar"
        android:background="@color/colorGray">

        <TextView
            android:text="Items In List:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemsInListText"
            android:paddingTop="@dimen/bottom_bar_padding_top"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/colorWhite" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemsInListValueText"
            android:layout_toRightOf="@+id/itemsInListText"
            android:textAlignment="viewStart"
            android:paddingTop="@dimen/bottom_bar_padding_top"
            android:paddingRight="50dp"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <TextView
            android:text="Items Selected:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ItemsSelectedText"
            android:textAllCaps="false"
            android:layout_toRightOf="@+id/itemsInListValueText"
            android:layout_toLeftOf="@+id/ItemsSelectedValueText"
            android:textAlignment="viewEnd"
            android:textSize="14sp"
            android:paddingTop="@dimen/bottom_bar_padding_top"
            android:paddingRight="5dp"
            android:textColor="@android:color/white" />

        <TextView
            android:text="0/0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ItemsSelectedValueText"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:paddingTop="@dimen/bottom_bar_padding_top"
            android:paddingRight="8dp"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</LinearLayout>