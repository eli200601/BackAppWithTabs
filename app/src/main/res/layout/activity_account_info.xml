<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:srcCompat="@mipmap/ic_dropbox_logo" />

    <TextView
        android:id="@+id/info_fullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"

        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"

        android:text="Full Name:"
        android:textColor="@color/cardview_dark_background"/>

    <TextView
        android:id="@+id/info_uid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        android:layout_below="@+id/info_fullName"
        android:layout_centerHorizontal="true"

        android:text="UID:"
        android:textColor="@color/cardview_dark_background"/>


    <RelativeLayout
        android:id="@+id/info_space_text_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"

        android:layout_below="@+id/info_uid"
        android:layout_alignStart="@+id/info_uid">

        <TextView
            android:id="@+id/info_space_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Used Space:"
            android:textColor="@color/cardview_dark_background"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/info_total_space_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textColor="@color/cardview_dark_background"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/info_space_progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:layout_marginRight="5dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/info_progress_colors"
        android:layout_below="@+id/info_space_text_holder"
        android:layout_alignStart="@+id/info_uid" />

    <RelativeLayout
        android:id="@+id/info_url_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"

        android:layout_below="@+id/info_space_progressBar"
        android:layout_alignStart="@+id/info_space_progressBar">

        <TextView
            android:id="@+id/info_referralURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Referral URL:"
            android:textColor="@color/cardview_dark_background"
            />

        <TextView
            android:id="@+id/info_url_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Http://"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/info_referralURL"
            android:paddingLeft="5dp"
            android:autoLink="web"/>


    </RelativeLayout>

</RelativeLayout>